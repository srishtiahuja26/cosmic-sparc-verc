datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model College {
  id        String   @id @default(cuid())
  name      String
  code      String   @unique
  events    Event[]
  admins    User[]   @relation("CollegeAdmins")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String
  date        DateTime
  location    String
  collegeId   String   
  college     College  @relation(fields: [collegeId], references: [id])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      Role     @default(USER)
  collegeId String?  
  college   College? @relation("CollegeAdmins", fields: [collegeId], references: [id])
}

enum Role {
  USER
  COLLEGE_ADMIN
  SUPER_ADMIN
} 